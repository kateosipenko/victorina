	<Grid Margin="24">
		<Grid.RowDefinitions>
			<RowDefinition Height="0.3*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="0.3*" />
		</Grid.RowDefinitions>

		<Image x:Name="image" Source="{Binding CurrentQuestion.CategoryImage}"
			   HorizontalAlignment="Right"
			   Stretch="Uniform" Opacity="0"
			   VerticalAlignment="Top"
			   Grid.Row="0" RenderTransformOrigin="0.5,0.5">
			<Image.RenderTransform>
				<CompositeTransform/>
			</Image.RenderTransform>
		</Image>

		<controls:TimerControl x:Name="timerControl" Grid.Row="0" CurrentTime="{Binding CurrentTime, Mode=TwoWay}"
							   HorizontalAlignment="Left" Opacity="0"
							   IsRunning="True" Margin="0" RenderTransformOrigin="0.5,0.5" >
			<controls:TimerControl.RenderTransform>
				<CompositeTransform/>
			</controls:TimerControl.RenderTransform>
		</controls:TimerControl>

		<TextBlock x:Name="textBlock" Text="{Binding CurrentQuestion.QuestionText}"
				   FontSize="48"
				   Grid.Row="2" Opacity="0"
				   Foreground="Black"
				   FontFamily="Segoe Print" 
				   TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" >
			<TextBlock.RenderTransform>
				<CompositeTransform/>
			</TextBlock.RenderTransform>
		</TextBlock>


		<Image x:Name="image2" Source="/Images/panas.png" Visibility="{Binding ImageQuestionVisibility}"
			   Stretch="Uniform" Grid.Row="0" MaxHeight="170"
			   VerticalAlignment="Stretch" HorizontalAlignment="Center" />

		<Grid Grid.Row="3" VerticalAlignment="Center"
			  Margin="0,48,-24,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<RadioButton x:Name="radioButton" Content="{Binding CurrentQuestion.Answer0}"
						 VerticalContentAlignment="Center" Opacity="0"
						 Command="{Binding SetAnswerCommand}"
						 CommandParameter="{Binding CurrentQuestion.Answer0}"
						 Style="{StaticResource RadioButtonStyle}" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
				<RadioButton.Projection>
					<PlaneProjection CenterOfRotationX="0" CenterOfRotationY="0" />
				</RadioButton.Projection>
				<RadioButton.RenderTransform>
					<CompositeTransform/>
				</RadioButton.RenderTransform>
				<interactivity:Interaction.Behaviors>
					<behaviors:AnswerToCheckedBehavior CurrentAnswer="{Binding CurrentAnswer}"
													   TargetAnswer="{Binding CurrentQuestion.Answer0}" />
				</interactivity:Interaction.Behaviors>
			</RadioButton>

			<RadioButton x:Name="radioButton1" Content="{Binding CurrentQuestion.Answer1}"
						 Style="{StaticResource RadioButtonStyle}"
						 Command="{Binding SetAnswerCommand}" Opacity="0"
						 CommandParameter="{Binding CurrentQuestion.Answer1}"
						 VerticalContentAlignment="Center"
						 Grid.Column="1" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
				<RadioButton.Projection>
					<PlaneProjection CenterOfRotationX="0" CenterOfRotationY="0" />
				</RadioButton.Projection>
				<RadioButton.RenderTransform>
					<CompositeTransform/>
				</RadioButton.RenderTransform>
				<interactivity:Interaction.Behaviors>
					<behaviors:AnswerToCheckedBehavior CurrentAnswer="{Binding CurrentAnswer}"
													   TargetAnswer="{Binding CurrentQuestion.Answer1}" />
				</interactivity:Interaction.Behaviors>
			</RadioButton>

			<RadioButton x:Name="radioButton2" Content="{Binding CurrentQuestion.Answer2}"
						 Style="{StaticResource RadioButtonStyle}" Opacity="0"
						 Command="{Binding SetAnswerCommand}"
						 CommandParameter="{Binding CurrentQuestion.Answer2}"
						 VerticalContentAlignment="Center"
						 Grid.Row="1" RenderTransformOrigin="0.5,0.5" BorderBrush="Black">
				<RadioButton.Projection>
					<PlaneProjection CenterOfRotationX="0" CenterOfRotationY="0" />
				</RadioButton.Projection>
				<RadioButton.RenderTransform>
					<CompositeTransform/>
				</RadioButton.RenderTransform>
				<interactivity:Interaction.Behaviors>
					<behaviors:AnswerToCheckedBehavior CurrentAnswer="{Binding CurrentAnswer}"
													   TargetAnswer="{Binding CurrentQuestion.Answer2}" />
				</interactivity:Interaction.Behaviors>
			</RadioButton>

		</Grid>

		<Button x:Name="button" Grid.Row="4"
				Content="далi" Opacity="0"
				Style="{StaticResource ViolettButtonStyle}"
				Command="{Binding GoToNextQuestionCommand}" RenderTransformOrigin="0.5,0.5" >
			<Button.RenderTransform>
				<CompositeTransform/>
			</Button.RenderTransform>
		</Button>

		<Image x:Name="image1" Source="Images/teacher.png"
			   Stretch="Uniform" Opacity="0"
			   HorizontalAlignment="Left"
			   VerticalAlignment="Bottom"
			   Grid.Row="4" RenderTransformOrigin="0.5,0.5">
			<Image.RenderTransform>
				<CompositeTransform/>
			</Image.RenderTransform>
		</Image>

	</Grid>
</Page>
